<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hlmnlogin">
    <EditText
        android:id="@+id/txt_ed_email"
        android:layout_width="355dp"
        android:layout_height="61dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/emaillogin"
        android:hint="  Email or Phone Number"
        android:inputType="textEmailAddress"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txt_ed_pass"
        android:layout_width="355dp"
        android:layout_height="61dp"
        android:layout_below="@id/txt_ed_email"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/emaillogin"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt_lupaPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ed_pass"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Lupa Password?"
        android:textAlignment="textEnd"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btnlogin2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_lupaPass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:text="Login" />





</RelativeLayout>